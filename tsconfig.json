{
	"compilerOptions": {
		"rootDirs": ["src"],
		"outDir": "dist",
		"lib": ["es2023"],
		"target": "es2023",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"types": ["node"],
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true, // for express
		"forceConsistentCasingInFileNames": false,
		"sourceMap": true,
		"allowJs": true,
		"baseUrl": ".", // Root directory
		"paths": {
			"@src/*": ["src/*"],
			"@config/*": ["config/*"],
			"@utils/*": ["src/utils/*"],
			"@errors/*": ["src/errorHandlers/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
