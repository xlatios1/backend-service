{
	"compilerOptions": {
		"rootDirs": ["src"],
		"outDir": "dist",
		"lib": ["es2020"],
		"target": "es2020",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"types": ["node"],
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true, // for express
		"forceConsistentCasingInFileNames": false,
		"sourceMap": true,
		"allowJs": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
